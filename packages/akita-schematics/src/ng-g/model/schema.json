{
  "$schema": "http://json-schema.org/schema",
  "$id": "SchematicsAkitaModel",
  "title": "Akita Model Options Schema",
  "type": "object",
  "properties": {
    "name": {
      "description": "The name of the model.",
      "type": "string",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "path": {
      "type": "string",
      "format": "path",
      "description": "The path to create the modek.",
      "visible": false
    },
    "dirName": {
      "type": "string",
      "default": "state",
      "description": "Specifies the name of the generated folder"
    },
    "feature": {
      "type": "boolean",
      "default": false
    }
  },
  "required": []
}