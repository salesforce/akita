{
  "$schema": "http://json-schema.org/schema",
  "$id": "SchematicsAkitaModule",
  "title": "Akita Module Options Schema",
  "type": "object",
  "properties": {
    "name": {
      "description": "The name of the module.",
      "type": "string",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "path": {
      "type": "string",
      "format": "path",
      "description": "The path to create the modek.",
      "visible": false
    },
    "feature": {
      "type": "boolean",
      "default": true
    }
  },
  "required": []
}